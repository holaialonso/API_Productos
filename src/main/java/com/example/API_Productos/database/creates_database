BBDD: API_Productos

CREATE TABLE categorias(
    id int(11) AUTO_INCREMENT NOT NULL,
    nombre varchar(100),
    PRIMARY KEY (id)
)

CREATE TABLE productos(
    id int(11) AUTO_INCREMENT NOT NULL,
    nombre varchar(250),
    marca varchar(100),
    cant_caja int(4),
    composicion varchar(100),
    activo tinyint(1),
    ref_id_categoria int(11),
    PRIMARY KEY (id),
    FOREIGN KEY (ref_id_categoria) REFERENCES categorias(id)
)

CREATE TABLE colores(
    id int(11) AUTO_INCREMENT NOT NULL,
    cod_color varchar(10),
    nombre varchar(100),
    PRIMARY KEY (id)
)

CREATE TABLE tallas(
    id int(11) AUTO_INCREMENT NOT NULL,
    nombre varchar(10),
    PRIMARY KEY (id)
)

CREATE TABLE colores_productos(
    ref_id_color int(11),
    ref_id_producto int(11),
    activo tinyint(1),
    PRIMARY KEY (ref_id_color, ref_id_producto),
    FOREIGN KEY (ref_id_color) REFERENCES colores(id),
    FOREIGN KEY (ref_id_producto) REFERENCES productos(id)
)

CREATE TABLE tallas_productos(
    id int(11) AUTO_INCREMENT NOT NULL,
    ref_id_talla int(11),
    ref_id_producto int(11),
    ancho float,
    alto float,
    PRIMARY KEY (id),
    FOREIGN KEY (ref_id_talla) REFERENCES tallas(id),
    FOREIGN KEY (ref_id_producto) REFERENCES productos(id)
)


